
<%= form_for @site, :html => {multipart: true} do |f|  %>
        <div class="row">
            <div class="col-sm-8">
              <div class="form-group">
                <%= f.label :company_name %>
                <%= f.text_field :name, class:"form-control", required: true  %>
              </div><!-- /.form-group-->
              <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, class:"form-control", rows: 5  %>
              </div><!-- /.form-group-->
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                  <%= f.label :Add_your_logo %>
                  <%= f.file_field :image, class:"btn btn-small btn-secondary btn-inverse"   %>
                </div><!-- /.form-group-->
            </div><!-- /.col-* -->
            <div class="col-sm-4">
              <%= image_tag("logoblank.png") %>
            </div>
        </div>

        <div class="row">
          <h4>Contact Information</h4>
            <div class="col-sm-4">
              <%= f.label :location %>
              <%= f.text_field :location, class:"form-control"  %>
            </div><!-- /.col-* -->
            <div class="col-sm-4">
              <%= f.label :city %>
              <%= f.text_field :city, class:"form-control"  %>
            </div><!-- /.col-* -->
            <div class="col-sm-4">
              <%= f.label :country %>
              <%= f.text_field :country, class:"form-control"  %>
            </div><!-- /.col-* -->

          </div>
          <br>
          <div class="row">
            <div class="col-sm-4">
              <%= f.label :email %>
              <%= f.text_field :email, class:"form-control"  %>
            </div><!-- /.col-* -->
            <div class="col-sm-4">
              <%= f.label :phone %>
              <%= f.text_field :phone, class:"form-control"  %>
            </div><!-- /.col-* -->
            <div class="col-sm-4">
              <%= f.label :website %>
              <%= f.text_field :website, class:"form-control"  %>
            </div><!-- /.col-* -->
            </div>
            <div class="row">
              <%= hidden_field_tag "site[amenity_ids][]", nil %>
              <% Amenity.all.each do |amenity| %>
              <%= check_box_tag "site[amenity_ids][]", amenity.id %>
              <%= amenity.name %>
              <% end %>
            </div>
            <br>
            <div class="center">
              <%= f.submit "Add Site", class:"btn btn-secondary btn-block" %>
            </div><!-- /.center -->
<% end %>
