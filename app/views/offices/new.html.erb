
<div class="container">
<div class="header-slogan">
    <span class="header-slogan-slash">/</span>
    <span class="header-slogan-text">Add you Office</span>
</div><!-- /.header-slogan-->
<br>
<hr>
<div class="container">
  <br>
<div class="col-sm-9">
  <%= form_for @office do |f|  %>
  <div class="row">
      <div class="col-sm-4">
          <div class="form-group">
            <%= f.label :logo %>
            <%= f.text_field :logo, class:"form-control"  %>
          </div><!-- /.form-group-->
      </div><!-- /.col-* -->
      <div class="col-sm-8">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class:"form-control"  %>
        </div><!-- /.form-group-->
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class:"form-control", rows: 5  %>
        </div><!-- /.form-group-->
      </div>
  </div>
  <h3 class="page-header">Contact Information</h3>
  <div class="row">
      <div class="col-sm-4">
        <%= f.label :location %>
        <%= f.text_field :location, class:"form-control"  %>
      </div><!-- /.col-* -->
      
    </div>
    <br>
    <div class="row">
      <div class="col-sm-4">
        <%= f.label :email %>
        <%= f.text_field :email, class:"form-control"  %>
      </div><!-- /.col-* -->
      <div class="col-sm-4">
        <%= f.label :phone %>
        <%= f.text_field :phone, class:"form-control"  %>
      </div><!-- /.col-* -->
      <div class="col-sm-4">
        <%= f.label :website %>
        <%= f.text_field :website, class:"form-control"  %>
      </div><!-- /.col-* -->
      </div>
      <br>
      <div class="center">
          <%= f.submit "Add my Office", class: "btn btn-secondary btn-lg" %>
      </div><!-- /.center -->
  <% end %>
</div>

